{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "experimentalDecorators": true,
        "moduleResolution": "node"
    },
    "paths": {
        "@/*": [
            "src/*"
        ]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "src/main.ts"] // 排除 main.ts
}
