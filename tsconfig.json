{
    "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    // 允许访问 openmcp-sdk 目录
    "paths": {
            "@openmcp-sdk/*": ["./openmcp-sdk/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "service", "renderer"]
}