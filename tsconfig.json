{
    "compilerOptions": {
        "target": "ES6",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": false,
        "noEmitHelpers": false,
        "experimentalDecorators": true,
        // 允许访问 openmcp-sdk 目录
        "paths": {
            "@openmcp-sdk/*": [
                "./openmcp-sdk/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "service",
        "renderer"
    ]
}