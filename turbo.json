{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "serve": {
            "dependsOn": ["^build"],
            "cache": false
        },
        "dev": {
            "with": ["@openmcp/renderer#serve", "@openmcp/service#serve"],
            "cache": false
        },
        "build": {
            "dependsOn": ["@openmcp/renderer#build", "@openmcp/service#build", "//#build:task-loop"],
            "cache": false
        },
        "//#build:task-loop": {
            "cache": false
        },
        "@openmcp/renderer#serve": {
            "cache": false,
            "persistent": true
        },
        "@openmcp/renderer#build": {
            "cache": false
        },
        "@openmcp/service#serve": {
            "persistent": true,
            "cache": false
        },
        "@openmcp/service#build": {
            "cache": false
        },
        "@openmcp/electron#dev": {
            "dependsOn": ["@openmcp/renderer#build"],
            "persistent": true,
            "cache": false
        },
        "@openmcp/electron#build": {
            "dependsOn": ["@openmcp/renderer#build"],
            "outputs": ["dist/**"]
        }
    }
}
